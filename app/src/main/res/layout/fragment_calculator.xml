<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="rickychandra.fst.ubd.mydailyfit.Activity.CalculatorFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Analisa Tubuh"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textSize="26sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Jenis Kelamin :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:padding="0dp"
            >
            <ImageView
                android:id="@+id/imgL"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="#ffff"
                android:src="@drawable/male"
                android:padding="3dp"
                android:clickable="true" />
            <CheckBox
                android:id="@+id/chkL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:clickable="false"
                android:checked="true"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            >
            <ImageView
                android:id="@+id/imgP"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="#ffff"
                android:src="@drawable/female"
                android:clickable="true" />
            <CheckBox
                android:clickable="false"
                android:id="@+id/chkP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:checked="true"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tinggi :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <EditText
                android:id="@+id/editHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tinggi"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  cm"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berat :"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <EditText
                android:id="@+id/editWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Berat"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Kg"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umur :"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <EditText
                android:id="@+id/editAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Umur"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Tahun"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Aktivitas : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:padding="0dp">
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/chkSangatRingan"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:text="Sangat Ringan"
                    android:textSize="11sp"
                    />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"

            android:padding="0dp">
            <CheckBox
                android:clickable="false"
                android:id="@+id/chkRingan"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:text="Ringan"
                android:textSize="11sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"

            android:padding="0dp">
            <CheckBox
                android:clickable="false"
                android:id="@+id/chkSedang"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textSize="11sp"
                android:text="Sedang"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:padding="0dp">
            <CheckBox
                android:clickable="false"
                android:id="@+id/chkBerat"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:textSize="11sp"
                android:text="Berat"
                />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <ImageView
        android:layout_marginTop="275dp"
        android:id="@+id/btnKalkulator"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:src="@drawable/hitungkalori" />
    <TextView
        android:id="@+id/textKalkulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btnKalkulator"
        android:layout_alignTop="@id/btnKalkulator"
        android:layout_alignRight="@id/btnKalkulator"
        android:layout_alignBottom="@id/btnKalkulator"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="HITUNG"
        android:textSize="20sp"
        android:textColor="#000000" />
    </RelativeLayout>
</RelativeLayout>
